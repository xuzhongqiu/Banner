<?xml version="1.0" encoding="utf-8"?>
<com.huawei.ott.gadget.extview.RelativeLayoutExt
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/h_poster">

    <com.huawei.ott.composite.banner.PosterViewPager
        android:id="@+id/poster_gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:soundEffectsEnabled="false"/>

    <com.huawei.ott.gadget.extview.RelativeLayoutExt
        android:id="@+id/no_data_for_banner"
        android:gravity="center"
        android:background="@color/C12"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.huawei.ott.gadget.nodata.NoDataView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/no_result_layout_max_width"/>
    </com.huawei.ott.gadget.extview.RelativeLayoutExt>
</com.huawei.ott.gadget.extview.RelativeLayoutExt>